@page "{id}"
@model WebStore.Pages.Admin.Products.ProductEditModel
@{
    ViewData["Title"] = "Edit Product";
}

<div style="margin-bottom: 2.5%">
    <form style="float:right;" action="/Admin/Products/ProductDetails/@Model.Input.ProductModel.Id">
        <input type="submit" value="View Details" />
    </form>
    <form style="float:right; padding-right: 10px;" action="/Admin/Products/AllProducts">
        <input type="submit" value="Return To Product List" />
    </form>
    <h3>Product Details</h3>
</div>

<form id="profile-form" method="post" enctype="multipart/form-data">
    <h4>Product information</h4>
    <div class="form-group">
        <label asp-for="Input.ProductModel.Title"></label>
        <input asp-for="Input.ProductModel.Title" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Input.ProductModel.Description"></label>
        <textarea class="form-control" rows="10" asp-for="Input.ProductModel.Description"></textarea>
    </div>
    <div class="form-group">
        <label asp-for="Input.ProductModel.AdditionalInformation"></label>
        <textarea class="form-control" rows="5" asp-for="Input.ProductModel.AdditionalInformation"></textarea>
    </div>
    <div class="form-group">
        <label asp-for="Input.ProductModel.Price"></label>
        <input type="number" step="0.01" asp-for="Input.ProductModel.Price" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Input.ProductModel.Visible"></label>
        <select asp-for="Input.ProductModel.Visible">
            <option value="True" selected>True</option>
            <option value="False">False</option>
        </select>
    </div>
    <br />

    <h4>Overwrite photo's</h4>
    <div class="form-group">
        <label style="font-size:20px"><b>Photo 1</b></label><br />
        <label>Current photo</label><br />
        <img style="max-height:10%; max-width:10%" src="@Model.Input.ProductModel.FilePath" /><br />
        <label>Overwrite photo with</label><br />
        <input type="file" asp-for="Upload" class="form-control-file" />
        <input type="text" asp-for="Input.ProductModel.FilePath" class="form-control" />
    </div>

    <div class="form-group">
        <label style="font-size:20px"><b>Photo 2</b></label><br />
        <label>Current photo</label><br />
        <img style="max-height:10%; max-width:10%" src="@Model.Input.ProductModel.FilePath2" /><br />
        <label>Overwrite photo with</label><br />
        <input type="file" asp-for="Upload2" class="form-control-file" />
        <input type="text" asp-for="Input.ProductModel.FilePath2" class="form-control" />
    </div>

    <div class="form-group">
        <label style="font-size:20px"><b>Photo 3</b></label><br />
        <label>Current photo</label><br />
        <img style="max-height:10%; max-width:10%" src="@Model.Input.ProductModel.FilePath3" /><br />
        <label>Overwrite photo with</label><br />
        <input type="file" asp-for="Upload3" class="form-control-file" />
        <input type="text" asp-for="Input.ProductModel.FilePath3" class="form-control" />
    </div>

    <div class="form-group">
        <label style="font-size:20px"><b>Photo 4</b></label><br />
        <label>Current photo</label><br />
        <img style="max-height:10%; max-width:10%" src="@Model.Input.ProductModel.FilePath4" /><br />
        <label>Overwrite photo with</label><br />
        <input type="file" asp-for="Upload4" class="form-control-file" />
        <input type="text" asp-for="Input.ProductModel.FilePath4" class="form-control" />
    </div>

    <div class="form-group">
        <label style="font-size:20px"><b>Photo 5</b></label><br />
        <label>Current photo</label><br />
        <img style="max-height:10%; max-width:10%" src="@Model.Input.ProductModel.FilePath5" /><br />
        <label>Overwrite photo with</label><br />
        <input type="file" asp-for="Upload5" class="form-control-file" />
        <input type="text" asp-for="Input.ProductModel.FilePath5" class="form-control" />
    </div>

    <button id="update-product-button" type="submit" class="btn btn-primary">Update Product</button>
</form>
