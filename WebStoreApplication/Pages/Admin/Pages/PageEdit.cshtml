@page "{id}"
@model WebStore.Pages.Admin.Pages.PageEditModel
@using WebStore.Models;
@{
    ViewData["Title"] = "Edit Page";
}

<div style="margin-bottom: 2.5%">
    <form style="float:right;" action="/Admin/Pages/PageDetails/@Model.Input.PageModel.Id">
        <input type="submit" value="View Details" />
    </form>
    <form style="float:right; padding-right: 10px;" action="/Admin/Pages/AllPages">
        <input type="submit" value="Return To Page List" />
    </form>
    <h3>Product Details</h3>
</div>

<form id="profile-form" method="post" enctype="multipart/form-data">
    <h4>Page information</h4>
    <div class="form-group">
        <label asp-for="Input.PageModel.PageName"></label>
        <input asp-for="Input.PageModel.PageName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Input.PageModel.LayoutNumber"></label>
        <input asp-for="Input.PageModel.LayoutNumber" class="form-control" />
    </div>
    @if (Model.Input.PageModel.PageModelName == PageModelNamesClass.IndexPageModel)
    {
        <h5>Header</h5>
        <div class="form-group">
            <label asp-for="Input.IndexPageModel.HeaderTitle"></label>
            <input asp-for="Input.IndexPageModel.HeaderTitle" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Input.IndexPageModel.HeaderDescription"></label>
            <input asp-for="Input.IndexPageModel.HeaderDescription" class="form-control" />
        </div>
        <div class="form-group">
            <label>Header Text Color (Hex Color Format)</label>
            <input style="color:@Model.Input.IndexPageModel.HeaderTextColor" asp-for="Input.IndexPageModel.HeaderTextColor" class="form-control" />
        </div>
        <div class="form-group">
            <label style="font-size:20px"><b>Header Photo</b></label><br />
            <label>Current photo</label><br />
            <img style="max-height:10%; max-width:10%" src="@Model.Input.IndexPageModel.HeaderPhotoPath" /><br />
            <label>Overwrite photo with</label><br />
            <input type="file" asp-for="Upload" class="form-control-file" />
            <input type="text" asp-for="Input.IndexPageModel.HeaderPhotoPath" class="form-control" />
        </div>
        <h5>Product Title's</h5>
        <div class="form-group">
            <label asp-for="Input.IndexPageModel.TopProductName1"></label>
            <input type="text" asp-for="Input.IndexPageModel.TopProductName1" class="form-control" />
            <input type="text" asp-for="Input.IndexPageModel.TopProductName2" class="form-control" />
            <input type="text" asp-for="Input.IndexPageModel.TopProductName3" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Input.IndexPageModel.TrendingProductName1"></label>
            <input type="text" asp-for="Input.IndexPageModel.TrendingProductName1" class="form-control" />
            <input type="text" asp-for="Input.IndexPageModel.TrendingProductName2" class="form-control" />
            <input type="text" asp-for="Input.IndexPageModel.TrendingProductName3" class="form-control" />
        </div>
    }
    <br />

    <button id="update-product-button" type="submit" class="btn btn-primary">Update Page</button>
</form>
